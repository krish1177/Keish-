<body>

    <div class="emoji-background" id="emojiBackground"></div>

    <div class="container">
        <h1>Saagrika â¤ï¸</h1>
        <p id="question">Saagrika, ek chhoti si love quiz khele? ğŸ˜</p>

        <div class="btn-container">
            <button class="btn yes-btn" onclick="startQuiz()">Haan chalo! ğŸ’•</button>
        </div>
    </div>

    <script>
        let questions = [
            "Q1: Kya tumhe chocolates pasand hai? ğŸ«",
            "Q2: Kya tumhe romantic movies dekhna pasand hai? ğŸ¬",
            "Q3: Kya tumhe surprises pasand hai? ğŸ",
            "Q4: Kya tum mujhe dekh kar hasi aati hai? ğŸ˜†",
            "Last Question: Kya tum mere saath hamesha rahogi? ğŸ’–"
        ];

        let loveThoughts = [
            "â¤ï¸ Jab tum muskurati ho, sab kuch aur sunder lagta hai! â¤ï¸",
            "ğŸ’– Tum meri zindagi ka sabse special part ho! ğŸ’–",
            "ğŸ˜ Tum bina sab kuch adhoora lagta hai! ğŸ˜",
            "ğŸ’ Har janam tumse hi shaadi karna chahta hoon! ğŸ’",
            "ğŸ’• Tum ho to duniya ek fairy tale jaisi lagti hai! ğŸ’•",
            "ğŸŒ¹ Tum meri good morning aur good night dono ho! ğŸŒ¹",
            "ğŸ’‘ Teri har hasi meri duniya roshan kar deti hai! ğŸ’‘",
            "ğŸ’˜ Tum mere liye ek pyaara sa sapna ho jo kabhi khatam na ho! ğŸ’˜"
        ];

        let currentQuestion = 0;
        let questionPara = document.getElementById("question");
        let btnContainer = document.querySelector(".btn-container");
        let noClickCount = 0;
        let noBtn;

        function startQuiz() {
            nextQuestion();
        }

        function nextQuestion() {
            if (currentQuestion < questions.length) {
                questionPara.innerText = questions[currentQuestion];

                btnContainer.innerHTML = `
                    <button class="btn yes-btn" onclick="nextQuestion()">Haan ğŸ’•</button>
                    <button class="btn no-btn" id="noBtn" onclick="handleNoClick()" onmouseover="moveNoButton()">Nahi ğŸ˜”</button>
                `;

                noBtn = document.getElementById("noBtn");
                noClickCount = 0; // Reset count for new question
                currentQuestion++;
            } else {
                showProposal();
            }
        }

        function handleNoClick() {
            noClickCount++;
            if (noClickCount === 3) {
                noBtn.innerText = "Haan ğŸ’•";
                noBtn.classList.add("yes-btn");
                noBtn.classList.remove("no-btn");
                noBtn.onclick = nextQuestion;
            }
        }

        function moveNoButton() {
            let x = Math.random() * 200 - 100;
            let y = Math.random() * 100 - 50;
            noBtn.style.transform = `translate(${x}px, ${y}px)`;
        }

        function showProposal() {
            questionPara.innerText = "Mujhse shaadi karogi? ğŸ’ğŸ˜";
            btnContainer.innerHTML = `
                <button class="btn yes-btn" onclick="acceptProposal()">Haan! ğŸ’–</button>
                <button class="btn yes-btn" onclick="acceptProposal()">Haan! ğŸ’–</button>
            `;
        }

        function acceptProposal() {
            document.body.style.background = "#ffccdd";
            document.body.innerHTML = `
                <h1 style="color:#ff3385; margin-top:50px;">Saagrika cutieee han app hamari! ğŸ’–</h1>
                <div class="thoughts-container" id="thoughtsContainer"></div>
                <p style="font-size: 22px; color: #ff3385;">With love, Krish â¤ï¸</p>
            `;

            let thoughtsContainer = document.getElementById("thoughtsContainer");

            loveThoughts.forEach((text, index) => {
                let div = document.createElement("div");
                div.innerText = text;
                div.classList.add("thought");
                div.style.animationDelay = `${index * 1}s`;
                thoughtsContainer.appendChild(div);
            });
        }

        function createFloatingEmojis() {
            let emojis = ["ğŸ’–", "ğŸ˜", "ğŸ’•", "â¤ï¸", "ğŸ’‘", "ğŸŒ¹", "ğŸ’", "ğŸ’"];
            let container = document.getElementById("emojiBackground");

            for (let i = 0; i < 30; i++) {
                let emoji = document.createElement("div");
                emoji.innerText = emojis[Math.floor(Math.random() * emojis.length)];
                emoji.classList.add("emoji");
                emoji.style.left = Math.random() * 100 + "vw";
                emoji.style.top = Math.random() * 100 + "vh";
                emoji.style.animationDuration = (Math.random() * 3 + 2) + "s";
                container.appendChild(emoji);
            }
        }

        createFloatingEmojis();
    </script>

